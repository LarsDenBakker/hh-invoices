    "eslint-config-prettier": "^6.7.0",
    "prettier": "^1.19.1",
    "rollup": "^1.27.4",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-index-html": "^1.7.2",
    "typescript": "^3.7.2"
